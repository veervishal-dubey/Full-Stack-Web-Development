/* FILE: script.js */
// Minimal interactive JS for demo. Replace mock data with real API calls in production.
(function(){
  // tiny mocked rainfall lookup by lat/lon (for demo only)
  function mockGetRainfall(lat,lon){
    // simple deterministic pseudo-random by digits
    const s = (Math.abs(Math.sin(lat*13.37 + lon*7.13))*1000)|0;
    const base = 800 + (s % 800); // mm/year between 800-1600
    return base;
  }

  // DOM helpers
  function el(id){return document.getElementById(id)}

  window.runCalculation = function(e){
    e.preventDefault();
    const latlon = el('latlon').value.trim();
    let lat=19.0760, lon=72.8777; // default mumbai
    if(latlon){const parts = latlon.split(',').map(x=>parseFloat(x)); if(parts.length>=2 && !isNaN(parts[0]) && !isNaN(parts[1])){lat=parts[0];lon=parts[1]}}

    const area = parseFloat(el('roofArea').value) || 0;
    const runoffCoeff = parseFloat(el('roofMat').value) || 0.85;
    const structureOpt = el('structureType');
    const structureEff = parseFloat(structureOpt.value);
    const selected = structureOpt.options[structureOpt.selectedIndex];
    const structureCost = parseFloat(selected.dataset.cost) || 30000;

    const rainfall = mockGetRainfall(lat,lon); // mm/yr
    // Convert mm to meters: mm/1000; volume (m3) = rainfall(m) * area(m2) * runoff coeff
    const runoffVolume = (rainfall/1000) * area * runoffCoeff; // m3/yr
    const rechargeVolume = runoffVolume * structureEff; // m3/yr

    // cost estimation simple: base cost + per cubic meter handling
    const variableCost = Math.round(rechargeVolume * 150); // Rs per m3 as proxy
    const totalCost = Math.round(structureCost + variableCost);

    const feasibilityScore = Math.min(100, Math.round((rechargeVolume/100)*10 + 30));

    el('rainfall').textContent = rainfall + ' mm/yr';
    el('runoff').textContent = runoffVolume.toFixed(2) + ' m³/yr';
    el('recharge').textContent = rechargeVolume.toFixed(2) + ' m³/yr';
    el('cost').textContent = '₹ ' + totalCost.toLocaleString();
    el('feasibility').textContent = feasibilityScore + '% (est)';

    // store quick report to localStorage
    const report = {
      created: new Date().toISOString(), lat,lon,area,rainfall,runoffVolume,rechargeVolume,totalCost,feasibilityScore
    };
    localStorage.setItem('rtrwh_last_report', JSON.stringify(report));
    // update sample stats on homepage if open
    const sampleRunoff = document.getElementById('sample-runoff');
    const sampleRecharge = document.getElementById('sample-recharge');
    if(sampleRunoff) sampleRunoff.textContent = runoffVolume.toFixed(0) + ' m³';
    if(sampleRecharge) sampleRecharge.textContent = rechargeVolume.toFixed(0) + ' m³';

    // also update report page content if available
    const repContainer = document.getElementById('reportContent');
    if(repContainer){
      repContainer.innerHTML = `<p><strong>Report date:</strong> ${new Date(report.created).toLocaleString()}</p>
      <p><strong>Location:</strong> ${lat.toFixed(4)}, ${lon.toFixed(4)}</p>
      <p><strong>Roof area:</strong> ${area} m²</p>
      <p><strong>Avg rainfall:</strong> ${rainfall} mm/yr</p>
      <p><strong>Estimated recharge:</strong> ${rechargeVolume.toFixed(2)} m³/yr</p>
      <p><strong>Estimated cost:</strong> ₹ ${totalCost.toLocaleString()}</p>`;
    }

    // friendly micro-animation on results card
    const resultsCard = document.querySelector('.results');
    if(resultsCard){ resultsCard.animate([{transform:'translateY(6px)'},{transform:'translateY(0)'}],{duration:350}) }

    return false;
  }

  window.handleSignup = function(e){ e.preventDefault(); alert('Demo: account created (stored locally).'); const name = document.getElementById('name').value; localStorage.setItem('rtrwh_user', JSON.stringify({name:name,email:document.getElementById('emailS').value})); window.location.href='calculate.html'; return false }
  window.handleLogin = function(e){ e.preventDefault(); alert('Demo: logged in (no backend).'); window.location.href='calculate.html'; return false }

  // on report page load, hydrate last report
  document.addEventListener('DOMContentLoaded', function(){
    const rep = localStorage.getItem('rtrwh_last_report');
    if(rep){
      try{ const data = JSON.parse(rep); const elc = document.getElementById('reportContent'); if(elc){ elc.innerHTML = `<p><strong>Report date:</strong> ${new Date(data.created).toLocaleString()}</p>
        <p><strong>Location:</strong> ${data.lat.toFixed(4)}, ${data.lon.toFixed(4)}</p>
        <p><strong>Roof area:</strong> ${data.area} m²</p>
        <p><strong>Avg rainfall:</strong> ${data.rainfall} mm/yr</p>
        <p><strong>Estimated recharge:</strong> ${data.rechargeVolume.toFixed(2)} m³/yr</p>
        <p><strong>Estimated cost:</strong> ₹ ${data.totalCost.toLocaleString()}</p>` }
      }catch(err){}
    }

    // wire download pdf (very lightweight client-side approach)
    const down = document.getElementById('downloadPdf');
    if(down){down.addEventListener('click', function(){
      const rep = localStorage.getItem('rtrwh_last_report');
      if(!rep){ alert('No report found. Run calculation first.'); return }
      const data = JSON.parse(rep);
      const html = `RTRWH Assessment Report

Date: ${new Date(data.created).toLocaleString()}
Location: ${data.lat.toFixed(4)}, ${data.lon.toFixed(4)}
Roof area: ${data.area} m²
Avg rainfall: ${data.rainfall} mm/yr
Estimated recharge: ${data.rechargeVolume.toFixed(2)} m³/yr
Estimated cost: ₹ ${data.totalCost.toLocaleString()}`;
      const blob = new Blob([html],{type:'text/plain'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a'); a.href = url; a.download = 'rtrwh_report.txt'; document.body.appendChild(a); a.click(); a.remove(); URL.revokeObjectURL(url);
    })}
  })
})();
